<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/flyingBaby"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:elevation="10dp"
        android:onClick="onFlyingBabyTapped"
        android:src="@mipmap/ic_launcher"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/statusBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EEE"
        android:gravity="center"
        android:text="Status"
        android:textColor="@color/colorBlack" />

    <TextView
        android:id="@+id/easterEggOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/easterBar"
        android:layout_below="@+id/statusBar"
        android:background="#007777"
        android:elevation="8dp"
        android:gravity="center"
        android:onClick="easterEggBlocker"
        android:text="Spear the Fish"
        android:textSize="40sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/easterBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#EEE"
        android:gravity="center"
        android:onClick="onEasterOpenClick"
        android:text="Run Animations"
        android:textColor="#000" />

</RelativeLayout>
